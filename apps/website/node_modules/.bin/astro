#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/astro@5.10.1_@types+node@20.19.1_jiti@2.4.2_lightningcss@1.30.1_rollup@4.44.0_typescript@5.8.3_yaml@2.8.0/node_modules/astro/node_modules:/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/astro@5.10.1_@types+node@20.19.1_jiti@2.4.2_lightningcss@1.30.1_rollup@4.44.0_typescript@5.8.3_yaml@2.8.0/node_modules:/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/astro@5.10.1_@types+node@20.19.1_jiti@2.4.2_lightningcss@1.30.1_rollup@4.44.0_typescript@5.8.3_yaml@2.8.0/node_modules/astro/node_modules:/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/astro@5.10.1_@types+node@20.19.1_jiti@2.4.2_lightningcss@1.30.1_rollup@4.44.0_typescript@5.8.3_yaml@2.8.0/node_modules:/Users/davidelisma/Repos/Colourfully.Digital/colourfully-digital-monorepo/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../astro/astro.js" "$@"
else
  exec node  "$basedir/../astro/astro.js" "$@"
fi
