---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getActiveVolunteerRoles } from '../../../lib/sanity';
import { t } from '../../../lib/translations';
import type { VolunteerRole } from '@colourfully-digital/types/sanity';

const language = 'fr';
const volunteerRoles: VolunteerRole[] = await getActiveVolunteerRoles(language);

const pageTitle = t('volunteer.title', language);
const pageDescription = t('volunteer.description', language);
---

<BaseLayout title={pageTitle} description={pageDescription} currentLang={language}>
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 max-w-6xl">
      <!-- Header Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {pageTitle}
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {pageDescription}
        </p>
      </div>

      <!-- Volunteer Roles Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {volunteerRoles.length > 0 ? (
          volunteerRoles.map((role) => (
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6">
              <!-- Role Title -->
              <h2 class="text-2xl font-bold text-gray-900 mb-4">
                {role.roleTitle}
              </h2>
              
              <!-- Role Description -->
              <p class="text-gray-700 mb-6 leading-relaxed">
                {role.description}
              </p>
              
              <!-- Time Commitment -->
              <div class="mb-4">
                <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-2">
                  {t('volunteer.timeCommitment', language)}
                </h3>
                <p class="text-gray-600">
                  {role.timeCommitment}
                </p>
              </div>
              
              <!-- Requirements -->
              {role.requirements && role.requirements.length > 0 && (
                <div class="mb-6">
                  <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-2">
                    {t('volunteer.requirements', language)}
                  </h3>
                  <ul class="space-y-1">
                    {role.requirements.map((requirement) => (
                      <li class="text-gray-600 text-sm flex items-start">
                        <span class="text-green-500 mr-2 mt-1">•</span>
                        {requirement}
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              
              <!-- Apply Now Button -->
              <div class="mt-auto">
                <button 
                  class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                  onclick="alert('Formulaire de candidature à venir dans l\'histoire 2.2!')"
                >
                  {t('volunteer.applyNow', language)}
                </button>
              </div>
            </div>
          ))
        ) : (
          <!-- No Roles Available -->
          <div class="col-span-full text-center py-12">
            <div class="bg-white rounded-lg shadow-md p-8">
              <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-700 mb-2">
                Aucune opportunité disponible
              </h3>
              <p class="text-gray-600">
                {t('volunteer.noRolesFound', language)}
              </p>
            </div>
          </div>
        )}
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Custom styles for volunteer role cards */
  .volunteer-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .volunteer-card .mt-auto {
    margin-top: auto;
  }
</style>
